# --- AI Configuration ---
# Get your API key from https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# --- Django Security ---
# Generate a secret key (e.g., using 'secrets.token_urlsafe(50)')
SECRET_KEY=your_django_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# --- Database & Storage ---
# Default is SQLite. For Production (PostgreSQL), add DB_URL here.
# DATABASE_URL=postgres://user:password@host:port/dbname

# --- Encryption ---
# Used for encrypting/decrypting broker API credentials.
# Generate using: cryptography.fernet.Fernet.generate_key()
ENCRYPTION_KEY=your_encryption_key_here

# --- Frontend Integration ---
# Used for CORS settings on the backend
FRONTEND_URL=http://localhost:5173
